@model PC2.ViewModel.CuentaViewModel
@{
    ViewData["Title"] = "Creaci√≥n de Cuenta";
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-lg-6">
            <div>
                <div>
                    <h5>Crear Cuenta Bancaria</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Cuenta" asp-action="Enviar" method="post">
                        <input type="hidden" asp-for="FormCuenta.Id" />

                        <div class="mb-3">
                            <label asp-for="FormCuenta.NombreTitular" class="form-label">Nombre del Titular</label>
                            <input asp-for="FormCuenta.NombreTitular" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FormCuenta.TipoCuenta" class="form-label">Tipo de Cuenta</label>
                            <input asp-for="FormCuenta.TipoCuenta" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FormCuenta.SaldoInicial" class="form-label">Saldo Inicial</label>
                            <input asp-for="FormCuenta.SaldoInicial" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="FormCuenta.Email" class="form-label">email</label>
                            <input asp-for="FormCuenta.Email" class="form-control" type="email" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Crear cuenta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>